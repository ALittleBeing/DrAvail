@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h6><text class="text-muted">Delete Role: </text>@Model.Name</h6>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <p class="card-text">Id: @Model.Id</p>
                <p class="card-text">Name: @Model.Name</p>
            </div>
            <div class="card-footer align-content-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}