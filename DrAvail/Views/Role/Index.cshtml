@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h1>List of Roles</h1>
<a asp-action="Create">Create</a>
<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Action(s)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td><a class="btn btn-outline-danger" asp-route-id="@role.Id" asp-action="Delete">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>