@model DrAvail.Models.Availability

<h4>Availability</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AvailabilityCreatePartial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailableOnWeekend" /> @Html.DisplayNameFor(model => model.IsAvailableOnWeekend)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStartDateTime" class="control-label"></label>
                <input asp-for="CurrentStartDateTime" class="form-control" />
                <span asp-validation-for="CurrentStartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentEndDateTime" class="control-label"></label>
                <input asp-for="CurrentEndDateTime" class="form-control" />
                <span asp-validation-for="CurrentEndDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPreference" class="control-label"></label>
                <select asp-for="ContactPreference" class="form-control"></select>
                <span asp-validation-for="ContactPreference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HospitalID" class="control-label"></label>
                <select asp-for="HospitalID" class ="form-control" asp-items="ViewBag.HospitalID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
