@model IEnumerable<DrAvail.Models.Message>

@{
    ViewData["Title"] = "ViewMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ViewMessages</h1>

<br />
<table class="table table-responsive" style="background-color:white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReceived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminResponse)
            </th>
            <th> Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateReceived)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdminResponse)
                </td>
                <td>
                    @{
                        if (item.AdminResponse == null)
                        {
                            <a class="btn btn-danger" asp-action="ReplyMessage" asp-route-id="@item.ID">Reply</a>
                        }
                        else
                        {
                            <a class="btn btn-danger disabled" href="#">Reply</a>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
