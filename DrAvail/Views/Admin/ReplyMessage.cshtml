@model DrAvail.Models.Message

@{
    ViewData["Title"] = "ReplyMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ReplyMessage</h1>

<h4>Message</h4>
<hr />
<div class="row">
        <form asp-action="ReplyMessage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 float-left">
                <input type="hidden" asp-for="ID" />
                <div class="form-group" hidden>
                    <label asp-for="IP" class="control-label"></label>
                    <input asp-for="IP" class="form-control" />
                    <span asp-validation-for="IP" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" disabled />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MessageText" class="control-label"></label>
                    <input asp-for="MessageText" class="form-control" disabled />
                    <span asp-validation-for="MessageText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateSent" class="control-label"></label>
                    <input asp-for="DateSent" class="form-control" disabled />
                    <span asp-validation-for="DateSent" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="DateResponded" class="control-label"></label>
                    <input asp-for="DateResponded" class="form-control" />
                    <span asp-validation-for="DateResponded" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 float-right">
                <div class="form-group">
                    <label asp-for="AdminResponse" class="control-label"></label>
                    <textarea asp-for="AdminResponse" class="form-control"></textarea>
                    <span asp-validation-for="AdminResponse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
